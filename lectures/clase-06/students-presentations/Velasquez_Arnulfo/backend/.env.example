# ===================================
# GOOGLE GEMINI API
# ===================================
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_gemini_api_key_aqui

# ===================================
# FACEBOOK & INSTAGRAM
# ===================================
# Guía: https://developers.facebook.com/docs/facebook-login/guides/access-tokens/get-long-lived
# 1. Crea una Facebook App en https://developers.facebook.com/
# 2. Agrega el producto "Facebook Login"
# 3. Genera un token de acceso de larga duración (60 días)
# 4. Obtén el ID de tu página de Facebook
# 5. Conecta tu cuenta de Instagram Business a la página

FACEBOOK_PAGE_ID=tu_facebook_page_id
FACEBOOK_ACCESS_TOKEN=tu_facebook_access_token_de_larga_duracion
INSTAGRAM_ACCOUNT_ID=tu_instagram_business_account_id

# ===================================
# LINKEDIN
# ===================================
# Guía: https://learn.microsoft.com/en-us/linkedin/shared/authentication/authentication
# 1. Crea una LinkedIn App en https://www.linkedin.com/developers/apps
# 2. Solicita permisos: w_member_social, r_liteprofile
# 3. Implementa OAuth 2.0 para obtener el access token
# NOTA: Los tokens expiran cada 60 días

LINKEDIN_ACCESS_TOKEN=tu_linkedin_access_token

# ===================================
# TWILIO (WHATSAPP)
# ===================================
# Guía: https://www.twilio.com/docs/whatsapp/quickstart/python
# 1. Crea una cuenta en https://www.twilio.com/
# 2. Activa el WhatsApp Sandbox: https://www.twilio.com/console/sms/whatsapp/sandbox
# 3. Obtén tus credenciales del dashboard
# 4. El número FROM es el sandbox de Twilio (no cambiar)

TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ===================================
# DJANGO SETTINGS (Opcional)
# ===================================
# Cambia a True solo en desarrollo
DEBUG=False

# Genera una clave secreta única para producción
# Puedes usar: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu_django_secret_key_para_produccion

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================================
# TIKTOK
# ===================================
# Obtener en developers.tiktok.com
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://127.0.0.1:8000/api/tiktok/callback/te

